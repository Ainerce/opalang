(* Merge with email.opa ? *)

+email : {string * (string * string)}
    <- name [<] spacing address [>] spacing {{ __1, __4 }}
     / address {{ "", __1 }}
name <- (![<] .)+ $_
      / ["] (!["] .)+ ["] $_
address <- local [@] domain {{ __1, __3 }}

local <- char+ ([.] local)? $_
domain <- domainpart [.] (domain / domainpart) $_
domainpart <-
	   char [\-] domainpart $_
	   / char domainpart? $_

(* special characters we should authorize ! # $ % & ' * + - / = ? ^ _ ` { | } ~ *)
char <- [A-Za-z0-9_\-+!#$%&'*/=?^_`{|}~]
spacing <- [ \t]*
