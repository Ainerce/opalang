##extern-type caml_list('a)
##opa-type list('a)
##register opa_list_to_ocaml_list: ('a -> 'b), opa[list('a)] -> caml_list('b)
##args(f, l)
{
  var x = new Array();
  var cl = l;
  var hd = cl.hd;
  while(hd){
      x.push(hd);
      cl = cl.tl;
      hd = cl.hd;
  }
  return x;
}

##register cons : 'a, caml_list('a) -> caml_list('a)
//'
##args(e, l)
{
  return [e].concat(l);
}


