function HashTable(obj)
{
    this.length = 0;
    this.items = {};
    for (var p in obj) {
        if (obj.hasOwnProperty(p)) {
            this.items[p] = obj[p];
            this.length++;
        }
    }

    this.setItem = function(key, value)
    {
        var previous = undefined;
        if (this.hasItem(key)) {
            previous = this.items[key];
        }
        else {
            this.length++;
        }
        this.items[key] = value;
        return previous;
    }

    this.getItem = function(key) {
        return this.hasItem(key) ? this.items[key] : undefined;
    }

    this.hasItem = function(key)
    {
        return this.items.hasOwnProperty(key);
    }
   
    this.removeItem = function(key)
    {
        if (this.hasItem(key)) {
            previous = this.items[key];
            this.length--;
            delete this.items[key];
            return previous;
        }
        else {
            return undefined;
        }
    }

    this.keys = function()
    {
        var keys = [];
        for (var k in this.items) {
            if (this.hasItem(k)) {
                keys.push(k);
            }
        }
        return keys;
    }

    this.values = function()
    {
        var values = [];
        for (var k in this.items) {
            if (this.hasItem(k)) {
                values.push(this.items[k]);
            }
        }
        return values;
    }

    this.toList = function(from, cnt)
    {
        var i = 0;
        var list = [];
        for (var k in this.items) {
            if (i >= from && this.hasItem(k)) {
              list.push({key:k, value:this.items[k]});
            }
            if (list.length >= cnt) break;
            i++
        }
        return list;
    }

    this.each = function(fn) {
        for (var k in this.items) {
            if (this.hasItem(k)) {
                fn(k, this.items[k]);
            }
        }
    }

    this.clear = function()
    {
        this.items = {}
        this.length = 0;
    }
}

##extern-type Hashtbl.t('key, 'value)

##register create : int -> Hashtbl.t('key, 'value)
##args(_init)
{
    return new HashTable({});
}

##register clear : Hashtbl.t('key, 'value) -> void
##args(table)
{
    table.clear();
    return js_void;
}

##register add : Hashtbl.t('key, 'value), opa['key], opa['value] -> void
##args(table, key, value)
{
    // TODO - Should have the same semantics as ML bsl
    table.setItem(key, value);
    return js_void;
}

##register replace : Hashtbl.t('key, 'value), opa['key], opa['value] -> void
##args(table, key, value)
{
    table.setItem(key, value);
    return js_void;
}

##register try_find : Hashtbl.t('key, 'value), opa['key] -> option(opa['value])
##args(table, key)
{
    var r = table.getItem(key);
    return typeof(r) != 'undefined' ? js_some(r) : js_none;
}

##register remove : Hashtbl.t('key, 'value), opa['key] -> void
##args(table, key)
{
    table.removeItem(key);
    return js_void;
}

##register size : Hashtbl.t('key, 'value) -> int
##args(table)
{
    return table.length;
}

